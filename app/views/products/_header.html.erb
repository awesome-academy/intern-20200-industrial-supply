<div class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="hero__categories">
          <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span><%= t "layouts._header.categories" %></span>
          </div>
          <ul class="display_select_category">
            <% @categories.each do |category| %>
              <li>
                <%= link_to products_path category_id: category.id do %>
                  <%= category.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="hero__search">
          <div class="hero__search__form">
            <%= search_form_for @q, remote: true do |f| %>
              <%= f.search_field :name_or_description_cont, placeholder: t("layouts.header.search") %>
              <%= button_tag t("layouts.header.search"), name: nil, class: "site-btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
