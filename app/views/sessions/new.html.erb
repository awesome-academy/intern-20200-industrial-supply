<%= provide :title, t("sessions.new.login") %>
<h1><%= t "sessions.new.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 signup-form">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, class: "boring-text" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, class: "boring-text" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "sessions.new.new_users" %>  <%= link_to t("sessions.signup"), signup_path %></p>
  </div>
</div>
