<main>
  <div class="container-fluid">
    <div class="mt-4">
      <%= link_to t(".back"), admins_products_path, class: "btn btn-success" %>
      <%= link_to t(".edit"), edit_admins_product_path(@product), class: "btn btn-primary" %>
      <br>
      <br>
      <h1><%= t".product_detail" %></h1>
      <br>
    </div>
    <dl class="row">
      <dt class="col-sm-3"><%= t ".name" %></dt>
      <dd class="col-sm-9">
        <%= @product.name %>
      </dd>
      <dt class="col-sm-3"><%= t ".category" %></dt>
      <dd class="col-sm-9">
        <%= @product.category_name %>
      </dd>
      <dt class="col-sm-3"><%= t ".supplier" %></dt>
      <dd class="col-sm-9">
        <%= @product.supplier_name %>
      </dd>
      <dt class="col-sm-3 text-truncate"><%= t ".price" %></dt>
      <dd class="col-sm-9">
        <%= number_to_currency @product.price %>
      </dd>
      <dt class="col-sm-3"><%= t ".amount" %></dt>
      <dd class="col-sm-9">
        <%= @product.inventory_number %>
      </dd>
      <dt class="col-sm-3"><%= t ".description" %></dt>
      <dd class="col-sm-9">
        <%= @product.description %>
      </dd>
      <dt class="col-sm-3"><%= t ".images" %></dt>
      <dd class="col-sm-9">
        <div id="gallery" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="row">
                <% @product.images.each do |image| %>
                  <div class="col-sm-5" >
                    <%= image_tag image.image_data, class: "img-fluid" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </dd>
    </dl>
  </div>
</main>
