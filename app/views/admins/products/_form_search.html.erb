<%= form_tag(admins_products_path, method: "get", remote: true) do %>
  <div class="row">
    <div class="col-3">
      <%= label_tag :key_word, t(".key_word") %>
      <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: t(".placeholder_key_word") %>
    </div>
    <div class="col-2">
      <%= label_tag :category, t(".category") %>
      <div class="form-group">
        <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", "name", params[:category_id]), include_blank: t(".choose_category"), class: "form-control" %>
      </div>
    </div>
    <div class="col-2">
      <%= label_tag :supplier_id, t(".supplier") %>
      <div class="form-group">
        <%= select_tag :supplier_id, options_from_collection_for_select(@suppliers, "id", "name", params[:supplier_id]), include_blank: t(".choose_supplier"), class: "form-control" %>
      </div>
    </div>
    <div class="col-2">
      <%= label_tag :from_price, t(".from_price") %>
      <%= number_field_tag :from_price, params[:from_price], type: "number", class: "form-control", placeholder: t(".placeholder_min_price") %>
    </div>
    <div class="col-2">
      <%= label_tag :to_price, t(".to_price") %>
      <%= number_field_tag :to_price, params[:to_price], type: "number", class: "form-control", placeholder: t(".placeholder_max_price") %>
    </div>
  </div>
  <div class="row">
    <div class="col justify-content-end">
      <%= submit_tag t(".search"), class: "btn btn-success" %>
      <%= link_to t(".reset"), admins_products_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
