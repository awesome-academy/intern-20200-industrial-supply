<%= provide :title, t(".orders") %>
<section class="shoping-cart spad order-detail">
  <div class="order-detail-container">
    <div class="row">
      <div class="col-lg-12">
        <h1><%= t(".orders") + "#" + @order.id.to_s %></h1>
        <div class="shoping__cart__table">
          <table>
            <thead>
              <tr>
                <th class="shoping__product"><%= t ".product" %></th>
                <th><%= t ".quantity" %></th>
                <th><%= t ".total" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "product_item",
                collection: @product_items, as: :order_detail %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <div class="shoping__cart__btns">
          <%= link_to t(".continue_shopping"), products_path %>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="shoping__cart__btns">
          <%= link_to t(".history_orders"), orders_history_index_path %>
        </div>
      </div>
      <% if @order.present? %>
        <div class="col-lg-6">
          <div class="shoping__checkout">
            <h5><%= t ".total_checkout" %></h5>
            <ul>
              <li><%= t ".total" %>
                <span><%= number_to_currency @order.total_amount %></span>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
