<header class="navbar navbar-fixed-top navbar-inverse ">
  <div class="container">
    <%= link_to t(".logo_content"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <form class="navbar-form navbar-left" action="">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default"><%= t ".submit" %></button>
        </form>
        <li><%= link_to t(".catergories"), "#" %></li>
        <li><%= link_to t(".cart"), "#" %></li>
        <% if false %>
          <li><%= link_to t(".users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t ".account" %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), "#" %></li>
                <li><%= link_to t(".settings"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), "#", method: :delete %>
                </li>
              </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), "#"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
