<% provide :title, t("sign_up") %>
<h2><%= t('.sign_up') %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3 signup-form">
    <%= form_for(resource, as: resource_name,
      url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "boring-text" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= display_error f.object, :name, t(".name") %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "boring-text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= display_error f.object, :email, :email %>
      </div>
      <div class="form-group">
        <%= f.label :address, class: "boring-text" %>
        <%= f.text_field :address, class: "form-control" %>
        <%= display_error f.object, :address, t(".address") %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, class: "boring-text" %>
        <%= f.text_field :phone_number, class: "form-control" %>
        <%= display_error f.object, :phone_number, t(".phone_number") %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "boring-text" %>
        <% if @minimum_password_length %>
           <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <%= display_error f.object, :password, t(".password") %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "boring-text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <%= display_error f.object, :password_confirmation, t(".password_confirmation") %>
      </div>
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
