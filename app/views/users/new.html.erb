<% provide :title, t("users.sign_up") %>
<h1><%= t "users.sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 signup-form">
    <%= form_for @user, url: signup_path, class: "form-group" do |f| %>
      <%= render "shared/error_messages", object: @user %>
      <div class="form-group">
        <%= f.label :name, class: "boring-text" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "boring-text" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address, class: "boring-text" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, class: "boring-text" %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "boring-text" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "boring-text" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
        <%= f.submit t("users.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
